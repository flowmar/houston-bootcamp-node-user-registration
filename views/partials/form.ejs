<div class="container-fluid">
  <h2 class="jumbotron text-center mt-3 p-3 border-border-default border z-depth-4 hoverable light-blue">Please fill out the form and click "Submit".</h2>

  <br>
  <br>
  <div class="card border border-light z-depth-5 hoverable shadow-lg cyan lighten-1">
    <form method="post" action="/register" class="px-3 py-4 ml-4 text-center">
      <fieldset>
        <legend class="font-weight-bold display-4 text-center">Personal Information:</legend>
        <hr>
        <br>

        <div class="row justify-content-center">
          <label class="font-weight-bold mr-2" for="first-name">First Name:
          </label>
          <input type="text" name="first-name" class="mx-2 rounded" placeholder=" Trent" data-validation="length" data-validation-length="min3" required>


          <label class="font-weight-bold mr-2" for="last-name">Last Name:</label>
          <input type="text" name="last-name" class="mx-2 rounded" placeholder=" Reznor" data-validation="length" data-validation-length="min3" required>
        </div>
        <br>

        <div class="row justify-content-center">
          <label class="font-weight-bold mr-2" for="email">Email:
          </label>
          <input type="text" name="email" class="mx-2 rounded" placeholder=" email@example.com" data-validation="email" required>


          <label class="font-weight-bold ml-2" for="password">Password:</label>
          <input type="text" name="password" class="mx-2 rounded" placeholder=" **********" required>
        </div>
        <br>
        <div class="row justify-content-center">
          <label class="font-weight-bold mx-2" for="gender">Gender:</label>
          <select data-validation="required">
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="other">Other</option>
          </select>
        </div>
        <br>

        <div class="row justify-content-center">
          <label class="font-weight-bold mr-2" for="birthday">Birthday:</label>
          <input type="text" name="birth-date" placeholder=" MM/DD/YYYY" class="rounded" id="birth-date">
        </div>
        <br>
        <label class="font-weight-bold mr-2" for="height">Height:</label>
        <input type="text" name="height" placeholder=" ex.5&apos;2&quot;" class="rounded mr-2" id="height">
        <label class="font-weight-bold" for="zip-code">Zip Code:</label>
        <input type="text" name="zip-code" placeholder=" #####" class="rounded mr-2" id="zip-code"> </fieldset>
      <br>
      <br>
      <fieldset>
        <legend class="font-weight-bold display-4">Preferences: </legend>
        <hr>
        <br>
        <div class="justify-content-center">
          <label class="font-weight-bold mr-2" for="gender-preference">Gender Preference:</label>
          <select data-validation="required">
            <option value="male">Male</option>
            <option value="female">Female</option>
            <option value="other">Other</option>
          </select>

        </div>
        <br>

        <div class="justify-content-center">
          <label class="font-weight-bold mx-2" for="min-age-preference">Minimum Age Preference: </label>
          <input type="text" name="min-age-preference" class="rounded" data-validation="number" data-validation-allowing="range[18;99]" required>

          <label class="font-weight-bold mx-2" for="max-age-preference">Max Age Preference:</label>
          <input type="text" name="max-age-preference" class="rounded" data-validation="number" data-validation-allowing="range[18;99]" required>
        </div>
        <br>

        <div class="justify-content-center">
          <label class="font-weight-bold mr-2" for="Race">Race:</label>
          <input type="text" name="Race" class="rounded" placeholder=" (optional)" id="race">

          <label class="font-weight-bold mr-2" for="religion">Religion:</label>
          <input type="text" name="religion" class="rounded" placeholder=" (optional)" id="religion">
        </div>
      </fieldset>
      <br>
      <input type="submit" name="submit" value="Submit" id="submit" class="btn btn-lg btn-success border border-dark shadow-lg">
    </form>
  </div>
</div>
<div class="container-fluid">
  <h2 class="jumbotron text-center mt-3 p-3 border-border-default border z-depth-4 hoverable light-blue">Please fill out the form and click "Submit".</h2>

  <br>
  <br>
  <div class="card border border-light z-depth-5 hoverable shadow-lg cyan lighten-1">
    <form method="post" action="/register" class="px-3 py-4 ml-4 text-center">
      <fieldset>
        <legend class="font-weight-bold display-4 text-center">Personal Information:</legend>
        <hr>
        <br>

        <div class="row justify-content-center">
          <label class="font-weight-bold" for="first-name" class="mr-2">First Name:
          </label>
          <input type="text" name="first-name" class="mx-2 rounded" placeholder=" Trent">


          <label class="font-weight-bold" for="last-name" class="mr-2">Last Name:</label>
          <input type="text" name="last-name" class="mx-2 rounded" placeholder=" Reznor">
        </div>
        <br>

        <div class="row justify-content-center">
          <label class="font-weight-bold mr-2" for="email">Email:
          </label>
          <input type="text" name="email" class="mx-2 rounded" placeholder=" email@example.com">


          <label class="font-weight-bold" for="password" class="ml-2">Password:</label>
          <input type="text" name="password" class="mx-2 rounded" placeholder=" **********">
        </div>
        <br>
        <div class="row justify-content-center">
          <label class="font-weight-bold" for="gender" class="mx-2">Gender:</label>
          <label for="male" class="ml-2">Male:</label>
          <input type="radio" name="gender" value="male" id="male" class="mx-2">
          <label for="female">Female: </label>
          <input type="radio" name="gender" value="female" id="female" class="mx-2">
          <label for="other">Other: </label>
          <input type="radio" name="gender" value="other" id="other">
        </div>
        <br>

        <div class="row justify-content-center">
          <label class="font-weight-bold mr-2" for="birthday">Birthday:</label>
          <input type="text" name="birthday" placeholder=" MM/DD/YYYY" class="rounded">
        </div>
        <br>
        <label class="font-weight-bold mr-2" for="height">Height:</label>
        <input type="text" name="height" placeholder=" ex.5&apos;2&quot;" class="rounded mr-2">
        <label class="font-weight-bold" for="zip-code">Zip Code:</label>
        <input type="text" name="zip-code" placeholder=" #####" class="rounded mr-2"> </fieldset>
        <br><br>
      <fieldset>
        <legend class="font-weight-bold display-4">Preferences: </legend>
        <hr>
        <br>
        <div class="justify-content-center">
          <label class="font-weight-bold mr-2" for="gender-preference">Gender Preference:</label>
          <input type="text" name="gender-preference" class="rounded">
        </div>
        <br>

        <div class="justify-content-center">
          <label class="font-weight-bold mx-2" for="min-age-preference">Minimum Age Preference: </label>
          <input type="text" name="min-age-preference" class="rounded">

          <label class="font-weight-bold mx-2" for="max-age-preference">Max Age Preference:</label>
          <input type="text" name="max-age-preference" class="rounded">
        </div>
        <br>

        <div class="justify-content-center">
          <label class="font-weight-bold mr-2" for="Race">Race</label>
          <input type="text" name="Race" class="rounded" placeholder=" optional">

          <label class="font-weight-bold mr-2" for="religion">Religion:</label>
          <input type="text" name="religion" class="rounded" placeholder=" optional">
        </div>
      </fieldset>
      <br>
            <input type="submit" name="submit" value="Submit" class="btn btn-lg btn-success border border-dark shadow-lg">
    </form>
  </div>
</div>